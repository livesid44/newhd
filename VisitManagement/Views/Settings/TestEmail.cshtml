@{
    ViewData["Title"] = "Test Email";
}

<div class="container-fluid mt-3">
    <div class="white-bg-main p-4">
        <div class="row mb-3">
            <div class="col-md-12">
                <h2 class="page-title">Test Email Configuration</h2>
                <p class="text-muted">Send a test email to verify your SMTP settings</p>
            </div>
        </div>

        <form asp-action="SendTestEmail" method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter email address to receive test email" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i> Send Test Email
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>

        <div class="mt-4">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> <strong>Note:</strong> Make sure you have configured SMTP settings before sending a test email.
            </div>
        </div>
    </div>
</div>
