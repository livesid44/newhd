@model IEnumerable<VisitManagement.Models.EmailTemplate>

@{
    ViewData["Title"] = "Settings";
    var smtpSettings = ViewBag.SmtpSettings as VisitManagement.Models.SmtpSettings;
}

<div class="container-fluid mt-3">
    <div class="white-bg-main p-4">
        <div class="row mb-3">
            <div class="col-md-8">
                <h2 class="page-title">System Settings</h2>
                <p class="text-muted">Configure SMTP and email templates</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="ConfigureSmtp" class="btn btn-primary">
                    <i class="bi bi-gear"></i> Configure SMTP
                </a>
                <a asp-action="TestEmail" class="btn btn-secondary">
                    <i class="bi bi-envelope-check"></i> Test Email
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- SMTP Settings Summary -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-server"></i> SMTP Configuration</h5>
            </div>
            <div class="card-body">
                @if (smtpSettings != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Server:</strong> @smtpSettings.Server</p>
                            <p><strong>Port:</strong> @smtpSettings.Port</p>
                            <p><strong>From Email:</strong> @smtpSettings.FromEmail</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>From Name:</strong> @smtpSettings.FromName</p>
                            <p><strong>SSL Enabled:</strong> @(smtpSettings.EnableSsl ? "Yes" : "No")</p>
                            <p><strong>Notifications:</strong> 
                                @if (smtpSettings.EnableNotifications)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Disabled</span>
                                }
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted">SMTP is not configured yet. Click "Configure SMTP" to set up email notifications.</p>
                }
            </div>
        </div>

        <!-- Email Templates -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="bi bi-envelope"></i> Email Templates</h5>
                <a asp-action="CreateTemplate" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Template
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Subject</th>
                                    <th>Status</th>
                                    <th>Last Modified</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.TemplateType</td>
                                        <td>@item.Subject</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@item.ModifiedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <a asp-action="EditTemplate" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-action="DeleteTemplate" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No email templates configured. Click "Create Template" to add one.</p>
                }
            </div>
        </div>

        <div class="mt-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Available Placeholders</h5>
                </div>
                <div class="card-body">
                    <p>Use the following placeholders in your email templates:</p>
                    <ul>
                        <li><code>{AccountName}</code> - Visit account name</li>
                        <li><code>{VisitDate}</code> - Visit date</li>
                        <li><code>{Location}</code> - Visit location</li>
                        <li><code>{VisitStatus}</code> - Visit status (Confirmed/Tentative)</li>
                        <li><code>{SalesSpoc}</code> - Sales SPOC name</li>
                        <li><code>{OpportunityType}</code> - Opportunity type (NN/EN)</li>
                        <li><code>{VisitType}</code> - Visit type</li>
                        <li><code>{VisitorsName}</code> - Visitors names</li>
                        <li><code>{IntimationDate}</code> - Date of intimation</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
