@model IEnumerable<VisitManagement.Models.Visit>

@{
    ViewData["Title"] = "Visits";
}

<div class="white-bg-main">
    <div class="row mb-3">
        <div class="col-md-6">
            <h5 class="mb-0">Visit Management</h5>
        </div>
        <div class="col-md-3">
            <a asp-action="Create" class="btn btn-primary float-end">
                <i class="bi bi-plus-circle"></i> Add New Visit
            </a>
        </div>
        <div class="col-md-3">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control form-control-sm" placeholder="Search...">
                    <span><i class="bi bi-search icon-search"></i></span>
                </div>
            </form>
        </div>
    </div>

    <div class="clear-20" style="height: 20px; clear: both;"></div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AccountNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" style="text-decoration: none; color: inherit;">
                            Account Name <i class="bi bi-funnel"></i>
                        </a>
                    </th>
                    <th>Type Of Visit</th>
                    <th>Sales SPOC</th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["VisitDateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" style="text-decoration: none; color: inherit;">
                            Visit Date <i class="bi bi-funnel"></i>
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" style="text-decoration: none; color: inherit;">
                            Status <i class="bi bi-funnel"></i>
                        </a>
                    </th>
                    <th>Category</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TypeOfVisit)</td>
                        <td>@Html.DisplayFor(modelItem => item.SalesSpoc)</td>
                        <td>@item.VisitDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.VisitStatus == VisitManagement.Models.VisitStatus.Confirmed)
                            {
                                <span class="badge bg-success">Confirmed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Tentative</span>
                            }
                        </td>
                        <td>
                            @if (item.Category.HasValue)
                            {
                                @switch (item.Category.Value)
                                {
                                    case VisitManagement.Models.VisitCategory.Platinum:
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill"></i> Platinum</span>
                                        break;
                                    case VisitManagement.Models.VisitCategory.Gold:
                                        <span class="badge bg-primary"><i class="bi bi-star-fill"></i> Gold</span>
                                        break;
                                    case VisitManagement.Models.VisitCategory.Silver:
                                        <span class="badge bg-secondary"><i class="bi bi-star"></i> Silver</span>
                                        break;
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
