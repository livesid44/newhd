@model IEnumerable<VisitManagement.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="white-bg-main">
    <div class="row mb-3">
        <div class="col-md-6">
            <h5 class="mb-0">User Management</h5>
        </div>
        <div class="col-md-3">
            <a asp-action="Create" class="btn btn-primary float-end">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
        <div class="col-md-3">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control form-control-sm" placeholder="Search...">
                    <span><i class="bi bi-search icon-search"></i></span>
                </div>
            </form>
        </div>
    </div>

    <div class="clear-20" style="height: 20px; clear: both;"></div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FullName) <i class="bi bi-funnel"></i></th>
                    <th>@Html.DisplayNameFor(model => model.Email) <i class="bi bi-funnel"></i></th>
                    <th>@Html.DisplayNameFor(model => model.Role) <i class="bi bi-funnel"></i></th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber) <i class="bi bi-funnel"></i></th>
                    <th>@Html.DisplayNameFor(model => model.IsActive) <i class="bi bi-funnel"></i></th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
